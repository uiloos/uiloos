    "@rollup/plugin-typescript": "8.3.0",
    "@types/jest": "27.4.0",
    "babel-jest": "27.5.1",
    "jest": "27.5.1",
    "rollup": "2.67.1",
    "rollup-plugin-dts": "4.1.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "ts-jest": "27.1.3",
    "tslib": "2.3.1",
    "typedoc": "0.22.12"
