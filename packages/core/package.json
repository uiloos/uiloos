{
  "name": "@automata.dev/core",
  "version": "0.0.0",
  "description": "The core of the automata headless UI",
  "keywords": [
    "tabs"
  ],
  "author": "Maarten Hus <maartenhus@gmail.com>",
  "homepage": "http://automata.dev",
  "license": "SEE LICENSE IN LICENSE.md",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf coverage && rm -f .package.lock-json && rm -rf dist",
