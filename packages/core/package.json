    "apigen": "rm -rf apigen && typedoc src  --json ../website/src/_data/api/core.json"
  },
  "devDependencies": {
    "@babel/core": "7.17.2",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
