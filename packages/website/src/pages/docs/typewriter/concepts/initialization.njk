import { Typewriter, TypewriterEvent } from '@uiloos/core';

const config = {
  actions: [{
    type: 'keyboard',
    cursor: 0,
    text: 'a',
    delay: 128
  },{
    type: 'keyboard',
    cursor: 0,
    text: 'b',
    delay: 64
  },{
    type: 'keyboard',
    cursor: 0,
    text: 'c',
    delay: 32
  }],
};

function subscriber(
  typewriter: Typewriter,
  event: TypewriterEvent
) {
  console.log(event);
}

const typewriter = new Typewriter(config, subscriber);

