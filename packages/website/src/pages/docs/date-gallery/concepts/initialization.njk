import { DateGallery, DateGallerySubscriberEvent } from '@uiloos/core';

type EventData = {
  title: string;
  description: string;
  color: string;
};

const config = {
  mode: 'week'
};

function subscriber(
  dateGallery: DateGallery<EventData>,
  event: DateGallerySubscriberEvent<EventData>
) {
  console.log(event);
}

const dateGallery = new DateGallery<EventData>(config, subscriber);

