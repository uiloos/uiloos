{% from "../../_includes/macros.njk" import displayExamples, displayName, displaySince, displayComment %}
{% from "../../_includes/property.njk" import displayProperty %}

<article>
  {{ displayName(def )}}

  <p class="font-mono mb-4 font-extrabold text-red-800">COMPONENT</p>

  <p class="font-mono mb-4">&lt;{{def.alias}}&#x2F;&gt;</p>
 
  {{ displayComment(def) }}

  {{ displaySince(def) }}

  {% if def.properties.length > 0 %}
    <h2 id="properties" class="text-xl"><a href="#properties">Properties</a></h2>
    {% for item in def.properties %}
      {{ displayProperty(item) }}
    {% endfor %}
  {% endif %}

  <h2 class="text-2xl">Example</h2>
  {{ displayExamples(def.examples, false) }}

</article>