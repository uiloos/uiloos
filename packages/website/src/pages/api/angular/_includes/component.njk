{% from "../../_includes/macros.njk" import displaySince, displayComment %}
{% from "../../_includes/property.njk" import displayProperty %}

<article>
  <h1>
    {{def.name}}

    {% if def.typeParameter.length > 0 %}
      &lt;{{def.typeParameter[0].name}}&gt;
    {% endif %}
  </h1>

  <p class="text-2xl font-mono mb-4 text-red-800">COMPONENT</p>

  {% for tag in def.comment.tags %}
    {% if tag.tag === 'alias' %}
      <p class="font-mono mb-4">&lt;{{tag.text}}&#x2F;&gt;</p>
    {% endif %}
  {% endfor %}

  {{ displayComment(def) }}

  {{ displaySince(def, 'angular') }}

  <h2 id="inputs"><a href="#inputs">Inputs</a></h2>
  {% for item in def.children %}
    {% if not item.flags.isPrivate and item.kindString === 'Property' and item.decorators[0].name === 'Input' %}
      {{ displayProperty(def, item, 'angular') }}
    {% endif %}
  {% endfor %}

</article>