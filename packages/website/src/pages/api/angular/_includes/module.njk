{% from "../../_includes/macros.njk" import displaySince %}

<article>
  <h1>
    {{def.name}}

    {% if def.typeParameter.length > 0 %}
      &lt;{{def.typeParameter[0].name}}&gt;
    {% endif %}
  </h1>

  <p class="text-2xl font-mono mb-4 text-purple-800">MODULE</p>

  <p>{{def.comment.shortText | escape | nl2br}}</p>
  {% if def.comment.text %}
    <p class="mb-2">{{def.comment.text | escape | nl2br}}</p>
  {% endif %}

  {{ displaySince(def, 'angular') }}
</article>