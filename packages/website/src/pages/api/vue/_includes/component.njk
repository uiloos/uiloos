{% from "../../_includes/macros.njk" import displayType %}

<article>
  <h1>
    {{def.name}}

    {% if def
      .signatures[0]
      .typeParameter
      .length > 0 %}
      &lt;{{def.signatures[0].typeParameter[0].name}}&gt;
    {% endif %}
  </h1>

  <p class="text-2xl font-mono mb-4 text-red-800">COMPONENT</p>

  <p>{{def.comment.shortText | escape | nl2br}}</p>
  {% if def.comment.text %}
    <p class="mb-2">{{def.comment.text | escape | nl2br}}</p>
  {% endif %}

  <h2 id="props"><a href="#props">Props</a></h2>
  {% for item in def.type.typeArguments[0].declaration.children %}
    <div class="border px-2 pt-4 mb-4">
      <h3 class="font-mono" id="{{item.name}}"><a href="#{{item.name}}">{{item.name}}</a></h3>

      <p class="mb-4 font-mono">
        {% for subitem in item.type.declaration.children %}
          {% if subitem.name === 'type' %}
            {{ displayType(subitem.type.declaration.signatures[0].type) }}
          {% endif %}
        {% endfor %}
      </p>
    </div>
  {% endfor %}
</article>