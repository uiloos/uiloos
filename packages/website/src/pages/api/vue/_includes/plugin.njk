{% from "../../_includes/macros.njk" import displaySince, displayComment %}

<article>
  <h1>
    {{def.name}}

    {% if def.typeParameter.length > 0 %}
      &lt;{{def.typeParameter[0].name}}&gt;
    {% endif %}
  </h1>

  <p class="text-2xl font-mono mb-4 text-purple-800">PLUGIN</p>

  {{ displayComment(def) }}

  {{ displaySince(def, 'vue') }}
</article>