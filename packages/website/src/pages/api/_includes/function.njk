{% from "./macros.njk" import displayType, displaySignatures %}

<div class="text-xl">
  <h1 class="h1 mb-4">
    {{def.name}}

    {% if def.typeParameter.length > 0 %}
      &lt;{{def.typeParameter[0].name}}&gt;
    {% endif %}
  </h1>

  <p class="text-2xl font-mono mb-4 text-green-800">FUNCTION</p>

  <p class="mb-4">{{def.comment.shortText | escape | nl2br}}</p>
  {% if def.comment.text %}
    <p class="mb-2">{{def.comment.text | escape | nl2br}}</p>
  {% endif %}

  {{ displaySignatures(def.signatures) }}
</div>
