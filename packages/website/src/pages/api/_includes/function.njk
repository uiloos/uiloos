{% from "./macros.njk" import displayType, displaySignatures, displaySince %}

{% macro functionPage(def, sinceRoot) %}
  <article>
    <h1>
      {{def.name}}

      {% if def.typeParameter.length > 0 %}
        &lt;{{def.typeParameter[0].name}}&gt;
      {% endif %}
    </h1>

    <p class="text-2xl font-mono mb-4 text-green-800">FUNCTION</p>

    <p>{{def.comment.shortText | escape | nl2br}}</p>
    {% if def.comment.text %}
      <p>{{def.comment.text | escape | nl2br}}</p>
    {% endif %}

    {{ displaySince(def, sinceRoot) }}

    {{ displaySignatures(def.signatures, sinceRoot) }}
  </article>

{% endmacro %}