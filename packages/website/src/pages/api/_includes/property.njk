{% from "./macros.njk" import displayType, displaySince, displayComment %}

{% macro displayProperty(def, item, sinceRoot) %}
  <div class="border px-2 pt-4 mb-4">
    <h3 class="font-mono" id="{{item.name}}"><a href="#{{item.name}}">{{item.name}}</a></h3>

    <p class="mb-4 font-mono">
      {{ displayType(item.type, sinceRoot) }}
    </p>

    {{ displayComment(item) }}

    {{ displaySince(def, sinceRoot) }}
  </div>

{% endmacro %}