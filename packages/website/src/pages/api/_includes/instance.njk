{% from "./macros.njk" import displayExamples, displayName, displaySince, displayComment %}

{% macro instancePage(def) %}
  <article>
    {{ displayName(def) }}

    <p class="font-mono mb-4 font-extrabold text-green-800">INSTANCE</p>

    {{ displayComment(def) }}

    {{ displaySince(def) }}

    {% for see in def.sees %}
      <p>
        <strong>See:</strong>
        <a 
          class="ml-2 underline text-purple-600 font-mono font-bold" 
          href="/api/core/{{ see.name | slug}}/"
        >
          {{ see.name }}
        </a>
      </p>
    {% endfor %}

    <h2 class="text-2xl">Example</h2>
    {{ displayExamples(def.examples, false) }}
  </article>
{% endmacro %}