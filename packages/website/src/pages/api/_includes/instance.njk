{% from "./macros.njk" import displaySignatures,
displaySince %}

{% macro instancePage(def, sinceRoot) %}
  <article>
    <h1>
      {{def.name}}
    </h1>

    <p class="text-2xl font-mono mb-4 text-green-800">INSTANCE</p>

    <p>{{def.comment.shortText | escape | nl2br}}</p>
    {% if def.comment.text %}
      <p class="mb-2">{{def.comment.text | escape | nl2br}}</p>
    {% endif %}

   F {{ displaySince(def, sinceRoot) }}

    {% for tag in def.comment.tags %}
      {% if tag.tag === 'see' %}
        <p>
          <strong>See:</strong>
          <a 
            class="ml-2 underline text-purple-600 font-mono font-bold" 
            href="/api/core/{{ tag.text | replace('{', '') | slug}}/"
          >
            {{ tag.text | replace('{', '') }}
          </a>
        </p>
      {% endif %}
    {% endfor %}
  </article>
{% endmacro %}