{% from "./macros.njk" import displaySignatures, displaySince %}

{% macro errorPage(def, sinceRoot) %}
  <article>
    <h1>
      {{def.name}}

      {% if def.typeParameter.length > 0 %}
        &lt;{{def.typeParameter[0].name}}&gt;
      {% endif %}
    </h1>

    <p class="text-2xl font-mono mb-4 text-red-800">ERROR</p>

    <p>{{def.comment.shortText | escape | nl2br}}</p>
    {% if def.comment.text %}
      <p>{{def.comment.text | escape | nl2br}}</p>
    {% endif %}

    {{ displaySince(def, sinceRoot) }}

  </article>
{% endmacro %}
